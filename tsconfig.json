{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "",
    "types": ["node", "vitest/globals"]
  },
  "include": ["api/**/*.ts", "codex/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
